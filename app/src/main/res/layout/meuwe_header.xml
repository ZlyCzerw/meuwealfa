<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_message_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/EventImageDesc"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/text_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Some Text"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBottom_toBottomOf="@id/image_message_profile"
        app:layout_constraintLeft_toLeftOf="@id/image_message_profile"
        app:layout_constraintRight_toRightOf="@id/image_message_profile" />

    <ImageView
        android:id="@+id/info_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/number_of_views"
        app:layout_constraintTop_toTopOf="@id/number_of_views"
        app:srcCompat="@color/colorPrimary" />

    <TextView
        android:id="@+id/number_of_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="20 views"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBottom_toBottomOf="@id/info_bar"
        app:layout_constraintLeft_toLeftOf="@id/info_bar"
        app:layout_constraintTop_toBottomOf="@id/image_message_profile" />

    <TextView
        android:id="@+id/number_of_responses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="15 responses"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBottom_toBottomOf="@id/info_bar"
        app:layout_constraintRight_toRightOf="@id/info_bar"
        app:layout_constraintTop_toBottomOf="@id/image_message_profile" />

</android.support.constraint.ConstraintLayout>